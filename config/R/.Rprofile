.First <- function() {
  # Load packages
  library(tidyverse)

  # Set theme
  my_theme <- theme_classic()+
  theme(axis.line = element_line(linetype = "solid"),
        axis.title = element_text(size = 20),
        axis.text = element_text(size = 20,colour = "black"),
        plot.title = element_text(size = 20))

  # Set the theme
  theme_set(my_theme)
}
